<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Fill color inside the circle -->
    <solid android:color="#FFFFFF"/>

    <!-- Optional: a border stroke around the circle -->
    <stroke
        android:width="2dp"
        android:color="#009688"/>

    <!-- Padding so your ImageView src has some inner margin -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
